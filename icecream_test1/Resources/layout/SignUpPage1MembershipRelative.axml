<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">
    <ImageButton
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton1" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout1">
        <TextView
            android:text="User Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_alignBaseline="@+id/SignUpPage1UserName" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SignUpPage1UserName"
            android:layout_toRightOf="@+id/textView1" />
        <TextView
            android:text="3-14 Characters"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_below="@+id/SignUpPage1UserName"
            android:gravity="center"
            android:layout_alignParentRight="true" />
        <TextView
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_alignBaseline="@+id/SignUpPage1Password"
            android:layout_below="@+id/textView6" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SignUpPage1Password"
            android:layout_toRightOf="@+id/textView2"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="40dp" />
        <TextView
            android:text="6-12 Characters"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_below="@+id/SignUpPage1Password"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true" />
        <TextView
            android:text="Confirm Password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView7"
            android:layout_alignBaseline="@+id/SignUpPage1Confirm" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SignUpPage1Confirm"
            android:layout_below="@+id/textView7"
            android:layout_toRightOf="@+id/textView3"
            android:layout_marginTop="40dp" />
        <TextView
            android:text="//Membership Information//"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_centerInParent="true"
            android:gravity="bottom"
            android:layout_above="@+id/button1"
            android:layout_marginBottom="20dp" />
        <Button
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/button1"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>
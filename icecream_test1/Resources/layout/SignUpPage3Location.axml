<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">
    <ImageButton
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton1" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout1">
        <TextView
            android:text="Country"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_alignBaseline="@+id/SignUpPage3Country" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SignUpPage3Country"
            android:layout_toRightOf="@+id/textView1"
            android:entries="USA,Puerto Rico"
            android:layout_alignParentRight="true"
            android:spinnerMode="dropdown"
            android:gravity="center" />
        <TextView
            android:text="State"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_below="@+id/SignUpPage3Country"
            android:layout_alignBaseline="@+id/SignUpPage3State" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SignUpPage3State"
            android:entries="Maryland, California"
            android:layout_toRightOf="@+id/textView2"
            android:layout_below="@+id/SignUpPage3Country"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true" />
        <TextView
            android:text="City"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_below="@+id/SignUpPage3State"
            android:layout_marginTop="5dp"
            android:layout_alignBaseline="@+id/SignUpPage3City" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SignUpPage3City"
            android:spinnerMode="dropdown"
            android:entries="Male,Female"
            android:layout_below="@+id/SignUpPage3State"
            android:layout_toRightOf="@+id/textView4"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true" />
        <TextView
            android:text="//Location//"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_centerInParent="true"
            android:gravity="bottom"
            android:layout_above="@+id/button1"
            android:layout_marginBottom="20dp" />
        <Button
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/button1"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>